# ========================================
# AGDevX OpenAPI MCP Server Configuration
# ========================================
# Copy this file to .env and update with your values

# ====================
# REQUIRED SETTINGS
# ====================

# Environment names (comma-separated)
ENVIRONMENTS=qa,prod

# Default environment (uses first if not specified)
DEFAULT_ENVIRONMENT=qa

# OpenAPI Spec URLs - Only used to fetch the OpenAPI specification
# Format: API_SPEC_URL_{ENVIRONMENT_NAME_UPPERCASE}
API_SPEC_URL_QA=https://qa-api.example.com/openapi/v1.json
API_SPEC_URL_PROD=https://api.example.com/openapi/v1.json

# Base API URLs - Used for ALL API calls
# Format: API_BASE_URL_{ENVIRONMENT_NAME_UPPERCASE}
API_BASE_URL_QA=https://qa-api.example.com
API_BASE_URL_PROD=https://api.example.com

# ====================
# OPTIONAL SETTINGS
# ====================

# Server Configuration
MCP_SERVER_NAME=agdevx-openapi-mcp-server
API_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Spec Management
SPEC_REFRESH_INTERVAL=0

# Debugging & Logging
MCP_VERBOSE=false

# Security
# WARNING: Only disable TLS verification in development, never in production
# NODE_TLS_REJECT_UNAUTHORIZED=0
