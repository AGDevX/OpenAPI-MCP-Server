# API_BASE_URL_QA=https://host.docker.internal:7087

API_SPEC_URL_PROD=https://host.docker.internal:7086/openapi/v1.json
# API_BASE_URL_PROD=https://host.docker.internal:7086

# OPTIONAL: Server configuration
MCP_SERVER_NAME=agdevx-openapi-mcp-server #-- Custom name for the MCP server
PORT=3000 #-- Port for the MCP server
API_TIMEOUT=30000 #-- Timeout for API requests in milliseconds

# OPTIONAL: Rate limiting
# Rate limiting protects production APIs from being overwhelmed
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10 #-- Maximum number of requests allowed within the time window
RATE_LIMIT_WINDOW_MS=60000 #-- Time window for rate limiting in milliseconds

# OPTIONAL: Interval to refresh OpenAPI spec in milliseconds (0 = no refresh)
SPEC_REFRESH_INTERVAL=0

# OPTIONAL: Enable verbose logging for debugging
MCP_VERBOSE=false

