{
	"name": "agdevx-openapi-mcp-server",
	"version": "0.0.2",
	"description": "MCP Server that dynamically exposes OpenAPI/Swagger specifications as tools for MCP clients",
	"author": "AGDevX",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"agdevx-openapi-mcp-server": "dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "rimraf dist && tsc",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"watch": "tsc --watch",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"openapi",
		"swagger",
		"api",
		"claude",
		"server",
		"tools",
		"ai"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"axios": "^1.7.9",
		"openapi-types": "^12.1.3"
	},
	"devDependencies": {
		"@types/express": "^5.0.6",
		"@types/node": "^22.10.5",
		"rimraf": "^6.1.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
}
