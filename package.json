{
	"name": "agdevx-openapi-mcp-server",
	"version": "0.0.14",
	"description": "MCP Server that dynamically exposes OpenAPI/Swagger specifications as tools for MCP clients",
	"author": "AGDevX",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"agdevx-openapi-mcp-server": "dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "rimraf dist && tsc && npm run copy-assets",
		"copy-assets": "node -e \"require('fs').cpSync('src/setup/ui.html', 'dist/setup/ui.html')\"",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"watch": "tsc --watch",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"prepublishOnly": "npm run build"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"openapi",
		"swagger",
		"api",
		"claude",
		"server",
		"tools",
		"ai"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"axios": "^1.7.9",
		"commander": "^14.0.2",
		"express": "^5.2.1",
		"open": "^11.0.0",
		"openapi-types": "^12.1.3"
	},
	"devDependencies": {
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.5",
		"jest": "^30.2.0",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2"
	}
}
