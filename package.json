{
	"name": "agdevx-openapi-mcp-server",
	"version": "0.0.25",
	"description": "MCP Server that dynamically exposes OpenAPI/Swagger specifications as tools for MCP clients",
	"author": "AGDevX",
	"license": "MIT",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"agdevx-openapi-mcp-server": "dist/index.js"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "rimraf dist && tsc && tsc-alias && npm run copy-assets",
		"copy-assets": "node -e \"require('fs').cpSync('src/setup/ui.html', 'dist/setup/ui.html')\"",
		"start": "node dist/index.js",
		"dev": "tsx src/index.ts",
		"watch": "tsc --watch",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
		"lint": "eslint src tests scripts",
		"lint:fix": "eslint src tests scripts --fix",
		"format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{ts,js,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{ts,js,json,md}\"",
		"prepublishOnly": "npm run build",
		"version:sync": "node scripts/sync-version.js",
		"postversion": "npm run version:sync && git add Dockerfile && git commit --amend --no-edit",
		"docker:build": "npm run version:sync && npm run build && docker build -t agdevx/agdevx-openapi-mcp-server:latest .",
		"docker:push": "docker push agdevx/agdevx-openapi-mcp-server:latest",
		"docker:release": "npm run docker:build && npm run docker:push"
	},
	"keywords": [
		"mcp",
		"model-context-protocol",
		"openapi",
		"swagger",
		"api",
		"claude",
		"server",
		"tools",
		"ai"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.0.0",
		"axios": "^1.7.9",
		"commander": "^14.0.2",
		"express": "^5.2.1",
		"open": "^11.0.0",
		"openapi-types": "^12.1.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^5.0.6",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.10.5",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^17.0.0",
		"jest": "^30.2.0",
		"prettier": "^3.8.0",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.53.1"
	}
}
